Algoritmo cicloMientras
	
	Definir contador, numrepeticiones Como Entero;
	Definir condicion Como Logico;
	
		contador = 0;
		
		numrepeticiones = 5;
	
	Mientras contador < numrepeticiones Hacer
		
		condicion = contador < numrepeticiones;
		contador = contador +1;
		
		Imprimir "Buenos dias :) ", condicion; 
		
		
	Fin Mientras
	
	
FinAlgoritmo
